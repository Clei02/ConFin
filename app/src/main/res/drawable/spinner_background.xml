<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del spinner -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Icono de flecha -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="end|center_vertical"
        android:end="16dp">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="0dp"
                    android:height="0dp" />
            </shape>
        </rotate>
    </item>
</layer-list>